#pragma kernel CSMain

RWTexture2DArray<float> terrainMap;     // output texture storing density function values.
float3 rootCoord;

// density function
// tool to help visualize (must adjust values in this script):
// http://www.math3d.org/
float SampleSlope(float3 coord) {
    coord = coord + rootCoord;
    coord = float3(coord.z, coord.x, coord.y);
    // return pow((coord.x - 16) / 4, 2) - pow((coord.y - 16) / 4, 2) + 16 - coord.z;
    return (sin(0.2 * pow(coord.x, 2) + 0.2 * pow(coord.y, 2))) + 16 - coord.z;
    // return sin(coord.x) * sin(coord.y) + 16 - coord.z;
}


[numthreads(11,11,3)]
void CSMain (uint3 id : SV_DispatchThreadID)
{
    terrainMap[id.xyz] = SampleSlope(float3(id.xyz));
}
